                                <span class="action properties fa fa-file-o" title="Properties"></span>
                            </div>
                            <div class="data-column">
                                <div class="column column-160px column-mobile-100">
                                    <span class="job-name non-wrapping-text column column-100 emphasized-text">DATELIST
                                    </span>

                                    <div class="override-wrapper"></div>
                                </div>
                                <div class="column column-100-minus-160px column-mobile-100">

                                        <i class="sam-icon sam-didnt-run"></i>
                                        <span class="text-label emphasized-text">Didn't Run</span>


                                    &nbsp;
                                </div>
                            </div>
